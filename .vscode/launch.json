    "version": "0.2.0",
    "configurations": [
        {
            "name": "OPA Run Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/opa-nats/main.go",
            "args": [
                "run",
                "--server",
                "--config-file",
                "${workspaceFolder}/examples/opa-nats/config.yaml",
                "--log-format",
                "text",
                "--log-level",
                "debug",
                "${workspaceFolder}/examples/opa-nats/rego"
            ]
        }
    ]
}
