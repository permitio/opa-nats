    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Example",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/handledpaths/main.go"
        },
        {
            "name": "OPA Run Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/examples/handledpaths/main.go",
            "args": [
                "run",
                "--server",
                "--log-format",
                "text"
            ]
        }
    ]
}